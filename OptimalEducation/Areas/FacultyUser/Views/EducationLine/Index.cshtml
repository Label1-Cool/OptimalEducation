@model IEnumerable<OptimalEducation.DAL.Models.EducationLine>

@{
    ViewBag.Title = "Index";
}

<h2>Направления обучения</h2>
<h3>
    @Html.DisplayNameFor(model => model.Faculty.Name)
</h3>
<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Actual)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EducationForm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FreePlacesNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequiredSum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaidPlacesNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Actual)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EducationForm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FreePlacesNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequiredSum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaidPlacesNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
